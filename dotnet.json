{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>krosoft-dev/Krosoft.Configs.Renovate"],
  "description": "Renovate configuration for .NET projects.",
  "packageRules": [
    {
      "groupName": "all Krosoft.Extensions packages",
      "matchPackageNames": ["Krosoft.Extensions.**"]
    },
    {
      "groupName": "AutoMapper",
      "matchPackageNames": ["AutoMapper"],
      "enabled": false
    },
    {
      "groupName": "MediatR",
      "matchPackageNames": ["MediatR"],
      "enabled": false
    },
    {
      "groupName": "dotnet packages",
      "extends": "monorepo:dotnet"
    },

    {
      "groupName": "microsoft packages",
      "matchSourceUrls": ["https://github.com/microsoft/{/,}**"]
    },
    {
      "groupName": "test frameworks packages",
      "matchPackagePatterns": [
        "^xunit",
        "^nunit",
        "^mstest",
        "^moq",
        "^nfluent",
        "^coverlet",
        "^microsoft\\.test",
        "^microsoft\\.testadapter",
        "^microsoft\\.testplatform",
        "^microsoft.*\\.testing"
      ]
    }
  ]
}
