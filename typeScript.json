{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>krosoft-dev/Krosoft.Configs.Renovate"],
  "description": "Renovate configuration for frontend projects.",
  "rangeStrategy": "bump",
  "postUpdateOptions": ["npmInstallTwice"],
  "lockFileMaintenance": {
    "enabled": false
  },

  "packageRules": [
    {
      "groupName": "TypeScript/Prettier/ESLint packages",
      "matchPackagePatterns": [
        "prettier",
        "^@typescript-eslint/",
        "^eslint",
        "typescript",
        "eslint",
        "eslint-*"
      ]
    },

    {
      "groupName": "Date Libraries",
      "matchPackageNames": ["date-fns", "date-fns-tz"]
    },

    {
      "groupName": "Testing packages",
      "matchPackagePatterns": ["^@testing-library/", "^jest-", "jsdom"]
    },
    {
      "groupName": "Node.js type packages",
      "matchPackagePatterns": ["^@types/node"]
    },

    {
      "groupName": "vite packages",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["@vitejs/**", "vite", "vite-**"]
    },

    {
      "groupName": "vitest packages",
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["vitest", "vitest-**", "@vitest/**"]
    }
  ]
}
