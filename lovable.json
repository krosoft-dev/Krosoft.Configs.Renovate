{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>krosoft-dev/Krosoft.Configs.Renovate:typeScript"],
  "description": "Renovate configuration for loveable projects.",
  "packageRules": [
    {
      "groupName": "DnD Kit packages",
      "matchPackagePatterns": ["^@dnd-kit/"]
    },
    {
      "groupName": "Radix UI packages",
      "matchPackagePatterns": ["^@radix-ui/"]
    },

    {
      "groupName": "UI Components",
      "matchPackageNames": [
        "@hookform/**",
        "class-variance-authority",
        "sonner"
      ]
    },
    {
      "groupName": "Tiptap packages",
      "matchPackagePatterns": ["^@tiptap/"]
    },
    {
      "groupName": "Turf packages",
      "matchPackagePatterns": ["^@turf/"]
    },
    {
      "groupName": "D3 packages",
      "matchPackagePatterns": ["^d3-", "^@types/d3-"]
    },
    {
      "groupName": "React packages",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "all Tanstack packages",
      "matchPackageNames": ["@tanstack/**"]
    },

    {
      "groupName": "Tailwind CSS packages",
      "matchPackagePatterns": [
        "^tailwindcss",
        "^@tailwindcss/",
        "tailwind-merge",
        "tailwindcss-animate"
      ]
    }
  ]
}
